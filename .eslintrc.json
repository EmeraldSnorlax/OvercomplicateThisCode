{
	"rules": {
		"array-bracket-newline": [1, "consistent"],
		"array-bracket-spacing": 1,
		"array-element-newline": [1, "consistent"],
		"block-spacing": 1,
		"brace-style": 1,
		"camelcase": 1,
		"comma-dangle": [1, "never"],
		"comma-spacing": 1,
		"comma-style": 1,
		"computed-property-spacing": 1,
		"consistent-this": 1,
		"eol-last": 1,
		"func-name-matching": 1,
		"func-names": [1, "never"],
		"func-style": 1,
		"implicit-arrow-linebreak": 1,
		"key-spacing": 1,
		"keyword-spacing": 1,
		"line-comment-position": 1,
		"linebreak-style": 1,
		"lines-between-class-members": [1, "always"],
		"max-depth": 1,
		"max-len": [1, { "code": 100, "tabWidth": 1 }],
		"max-lines": [1, { "max": 400, "skipBlankLines": true, "skipComments": true }],
		"max-lines-per-function": [1, { "skipBlankLines": true, "skipComments": true }],
		"max-params": 1,
		"max-statements": [1, 20, { "ignoreTopLevelFunctions": true }],
		"max-statements-per-line": 1,
		"multiline-comment-style": 1,
		"multiline-ternary": [1, "never"],
		"new-cap": [1, { "capIsNew": false }],
		"new-parens": 1,
		"newline-per-chained-call": 1,
		"no-array-constructor": 1,
		"no-inline-comments": 1,
		"no-lonely-if": 1,
		"no-mixed-operators": 1,
		"no-multi-assign": 1,
		"no-multiple-empty-lines": [1, { "max": 1 }],
		"no-negated-condition": 1,
		"no-nested-ternary": 1,
		"no-new-object": 1,
		"no-plusplus": [1, { "allowForLoopAfterthoughts": true }],
		"no-tabs": [1, { "allowIndentationTabs": true }],
		"no-trailing-spaces": 1,
		"no-underscore-dangle": [1, { "enforceInMethodNames": true }],
		"no-unneeded-ternary": [1, { "defaultAssignment": false }],
		"no-whitespace-before-property": 1,
		"nonblock-statement-body-position": 1,
		"object-curly-newline": 1,
		"object-curly-spacing": [1, "always"],
		"object-property-newline": 1,
		"one-var": [1, "never"],
		"one-var-declaration-per-line": [1, "always"],
		"operator-assignment": 1,
		"operator-linebreak": [1, "after"],
		"padding-line-between-statements": [
			1,
			{
				"blankLine": "always",
				"prev": ["const", "let", "var"],
				"next": "*"
			},
			{
				"blankLine": "always",
				"prev": "*",
				"next": ["const", "let", "var"]
			},
			{
				"blankLine": "always",
				"prev": "*",
				"next": ["block", "block-like"]
			},
			{
				"blankLine": "always",
				"prev": ["block", "block-like"],
				"next": "*"
			},
			{
				"blankLine": "always",
				"prev": "*",
				"next": "export"
			},
			{
				"blankLine": "never",
				"prev": "export",
				"next": "export"
			},
			{
				"blankLine": "always",
				"prev": "import",
				"next": "*"
			},
			{ "blankLine": "never", "prev": "import", "next": "import" },
			{
				"blankLine": "always",
				"prev": "*",
				"next": "expression"
			},
			{ "blankLine": "never", "prev": "expression", "next": "expression" },
			{
				"blankLine": "always",
				"prev": "*",
				"next": "return"
			},
			{
				"blankLine": "always",
				"prev": ["const", "let", "var"],
				"next": ["const", "let", "var"]
			},
			{
				"blankLine": "never",
				"prev": "const",
				"next": "const"
			},
			{
				"blankLine": "never",
				"prev": "let",
				"next": "let"
			},
			{
				"blankLine": "never",
				"prev": "var",
				"next": "var"
			}
		],
		"prefer-object-spread": 1,
		"quote-props": [1, "consistent-as-needed"],
		"quotes": [1, "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
		"semi": 1,
		"semi-spacing":1,
		"semi-style": 1,
		"sort-keys": [1, "asc", { "natural": true }],
		"sort-vars": 1,
		"space-before-blocks": 1,
		"space-in-parens": 1,
		"space-infix-ops": 1,
		"space-unary-ops": [1, { "words": true, "nonwords": false }],
		"spaced-comment": 1,
		"switch-colon-spacing": 1,
		"template-tag-spacing": 1,
		"wrap-regex": 1
	},
	"plugins": ["prettier"],
	"extends": ["eslint:recommended", "prettier", "prettier/@typescript-eslint"],
  	"parser": "babel-eslint"
}
